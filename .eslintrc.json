{
  "extends": "eslint:recommended",
  "env": {
    "node": true
  },
  "globals": {
    "Promise": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "no-console": 1,
    "max-len": [
      2,
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreUrls": true
      }
    ]
  }
}